<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp"
    android:elevation="4dp">

    <!-- Contenedor Vertical para el contenido del producto -->
    <ImageView
        android:id="@+id/productImage"
        android:layout_width="121dp"
        android:layout_height="132dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:src="@drawable/miniezineten" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <!-- Nombre del Producto -->
        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"
            android:textStyle="bold" />

        <!-- Tipo del Producto -->
        <TextView
            android:id="@+id/productType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Type"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="4dp" />

        <!-- Precio del Producto -->
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <!-- Disponibilidad del Producto -->
        <TextView
            android:id="@+id/productAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_marginBottom="8dp" />

        <!-- LinearLayout Horizontal para los botones -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp">

            <!-- Bot贸n para editar el producto -->
            <Button
                android:id="@+id/editButton"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:background="@android:color/holo_blue_light"
                android:text="Editatu"
                android:textColor="@android:color/white" /> <!-- Margen derecho para separaci贸n -->

            <!-- Bot贸n adicional al lado del bot贸n Editatu -->
            <Button
                android:id="@+id/deleteButton"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_light"
                android:text="Ezabatu"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
